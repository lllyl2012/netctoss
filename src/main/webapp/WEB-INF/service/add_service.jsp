        <script>
        	function mysubmit(){
        			var data = $("#main_form").serialize();
        			console.log(data);
        			$.ajax({
        						"url":"addService.do",
        						"data":data,
        						"datatype":"json",
        						"type":"post",
        						"success":function(obj){
        							if(obj.state != '1'){
        									$("#save_result_info").text("该帐号名称在该服务器上已经存在");
        									$("#save_result_info").show();
        							}else{
        									alert(obj.message);
        									window.location = "${base}/service/findService.do";
        									}
        								}
        					});
        			}
        </script>
